<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
      <link rel="stylesheet" type="text/css" href="/css/index.css" />
      <link rel="stylesheet" type="text/css" href="/css/menu.css" />
      <link rel="stylesheet" type="text/css" href="/css/cursoInicio.css" />
      <link rel="stylesheet" type="text/css" href="/css/tablaCursoInicio.css" />

  </head>
  <body>

    <div><%- include ('partials/navigationUsuarios.ejs') %></div>
    <div><%- include ('partials/navigationInicioCurso.ejs') %></div>
    <% if (rta) { %>
  <div><%- include ('partials/navigation.ejs') %></div>
    <div class="container">
        <div><br/></div>
    <div class="card">
      <div class="jumbotron" style="background-color: white">
        <h4 class="card-title"><%=rta.nombre %></h4>
        <b>Descripción:</b> <%=rta.descripcion%>
        (<i><%=rta.creador %>::<%=rta.fecha %></i>)
<% if(user){%>
  <br/><br/>
<table id="tablaInicio">
    <tr class="losTH">
      <th><%if(user){%>
        <img src="/img/add.png" alt="Nuevo" />
        <a href="/units/nuevaUnidad/<%= rta._id %>/1">Nueva unidad</a>
      <%}%></th>
      <th>Opciones</th>
    </tr>
    <% lasUnidades.forEach(function(u){%>
      <tr class="contenido">
        <td><b>(<%=u.orden%>):</b> <%=u.nombre%></td>

        <td>    <img src="/img/editarCurso.png" alt="Editar">
                <a href="/units/editarUnidad/<%= u._id %>">Editar</a>&nbsp;|&nbsp;
                <img src="/img/delete.png" alt="Eliminar">
                  <a href="/units/editarUnidad/<%= u._id %>">Eliminar</a>
               </td>

  </tr>
  <%});%>

</table>
<% } %>


        <% if(!user){%>
          <br/>  <br/>

          <table id="tablaInicio">
            <tr class="losTH">
            <th>Unidad</th><th>Descripción</th>
            </tr>
          <% lasUnidades.forEach(function(u){%>
              <tr class="contenido">

                <td><%=u.orden%>.<%=u.nombre%></td>

                    <% if (u.descripcion.length>90) {%>
                <td>  <%=u.descripcion.substring(0,90)%>...</td>
                  <%}else{%>
                    <td>  <%=u.descripcion%><td>
                    <%}%>
              </tr>
          <%});%>
        </table>

        <% } %>
        <%}%>


  </div>

</div>
  <div id="pie"><%- include ('partials/footer.ejs') %></div>
  </body>
</html>
